<%- include("partials/header.ejs") %>
    <!-- ========== Start  section of video banner ========== -->
    <div class="video-container">
        <video autoplay muted loop>
            <source src="./video/video-banner/donate.mp4" type="video/mp4">
            Your browser does not support the video tag.
        </video>
        <div class="video-overlay">
            <div>
                <h1 class="display-4"><strong>
                        <%= donate.videoBanner.headingDisplay%>
                    </strong></h1>
                <p class="lead">
                    <%= donate.videoBanner.pLead%>
                </p>
            </div>
        </div>
    </div>

    <!-- ========== End  section of video banner ========== -->
    <div class="bg-body-tertiary pb-5 ps-4 pt-5">
        <h2 class="display-6" style="text-align: center;">
            <%= donate.heading %>
        </h2>
        <p>
            <%= donate.p %>
        </p>
        <h2>
            <%= donate.whyDonate.heading %>
        </h2>
        <p>
            <%= donate.whyDonate.p %>:
        </p>
        <ul>
            <% donate.whyDonate.list.map((lists)=>{ %>
                <li>
                    <p><strong>
                            <%= lists.heading %>:
                        </strong>
                        <%= lists.text %>
                    </p>
                </li>
                <% }) %>
        </ul>
        <h2>
            <%= donate.waysToDonate.heading %>
        </h2>
        <h4>
            <%= donate.waysToDonate.subHeading %>
        </h4>
        <p>
            <%= donate.waysToDonate.p %>
        </p>
        <!-- ========== Start Section of the popup ========== -->
        <!-- Button trigger modal -->
        <button type="button" class="btn btn-outline-dark mb-5" data-bs-toggle="modal" data-bs-target="#exampleModal">
            <%= donate.waysToDonate.donateButton.heading %>
        </button>

        <!-- Modal -->
        <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h1 class="modal-title fs-5 text-center" id="exampleModalLabel">
                            <%= donate.waysToDonate.donateButton.modal.heading %>
                        </h1>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body" style="text-align: center; text-decoration: solid;">
                        <p class="lead"><strong>Account Name: <%= donate.waysToDonate.donateButton.modal.accountName %>
                            </strong></p>
                        <% donate.waysToDonate.donateButton.modal.bankAccount.map((account)=>{ %>
                            <strong>
                                <%= account.purpose %> (<%= account.bankName %>) <%= account.accountNumber %>
                            </strong><br>
                            <% }) %>
                    </div>
                </div>
            </div>
        </div>
        <!-- ========== End Section of the popup ========== -->
        <h4>
            <%= donate.waysToDonate.inPersonGiving.heading %>
        </h4>
        <p>
            <%= donate.waysToDonate.inPersonGiving.p %>
        </p>
        <iframe src=<%=donate.waysToDonate.inPersonGiving.mapURL %>
            width="98%" height="600" style="border:0;" allowfullscreen="" loading="lazy"
            referrerpolicy="no-referrer-when-downgrade"></iframe>

        <h3 class="pt-4">
            <%= donate.howWeUseDonations.heading %>
        </h3>
        <p>
            <%= donate.howWeUseDonations.p %>:
        </p>
        <ul>
            <% donate.howWeUseDonations.howWeUse.map((howWeUse)=>{ %>
                <li>
                    <p><strong>
                            <%= howWeUse.heading %>:
                        </strong>
                        <%= howWeUse.text %>
                    </p>
                </li>
                <% }) %>
        </ul>
        <h2><%= donate.joinUs.heading %></h2>
        <p>We invite you to join us in making a lasting impact through your financial support. Your generosity enables
            us to continue our mission of spreading the love of Christ and serving those in need.</p>

        <h3>Contact Us</h3>
        <p>If you have any questions about giving or need assistance, please contact our Finance Office at <a
                href="mailto:gateway4054@gmail.com">gateway4054@gmail.com</a> or <a href="tel:+2347031686966">Call
                us</a>. We are here to help and appreciate your generous support.</p>
    </div>
    <%- include("partials/footer.ejs") %>