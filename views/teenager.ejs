<%- include("partials/header.ejs") %>
    <!-- ========== Start  section of video banner ========== -->
    <div class="video-container">
        <video autoplay muted loop>
            <source src="./video/video-banner/teenager.mp4" type="video/mp4">
            Your browser does not support the video tag.
        </video>
        <div class="video-overlay">
            <div>
                <h1 class="display-4"><strong>The Teenagers Ministry</strong></h1>
                <p class="lead">Learn more about the Teenagers Ministry</p>
            </div>
        </div>
    </div>
    <div class="bg-body-tertiary pb-5 pt-5">
        <div class="container-fluid">
            <h2 class="text-center display-6" id="topHeading">
                <%= teenager.topHeading %>
            </h2>
            <p>
                <%= teenager.firstP %>
            </p>
            <h2 class="text-center">
                <%= teenager.mission.heading %>
            </h2>
            <p>
                <%= teenager.mission.missionText %>
            </p>
            <h1 class="display-6 text-center">
                <%= teenager.offer.topHeading %>
            </h1>
            <ul>
                <% teenager.offer.list.map((lists)=>{ %>
                    <li>
                        <p><strong>
                                <%= lists.heading %>:
                            </strong> </p>
                        <p>
                            <%= lists.p %>
                        </p>
                    </li>
                    <% }) %>
            </ul>
            <h2 class="text-center">
                <%= teenager.activities.topHeading %>
            </h2>
            <p>
                <%= teenager.activities.p %>:
            </p>
            <ul>
                <% teenager.activities.list.map((lists)=>{ %>
                    <li>
                        <p>
                            <%= lists.heading %>: <%= lists.text %>
                        </p>
                    </li>
                    <% }) %>
            </ul>
            <h2 class="pt-5 text-center">
                <%= teenager.video.heading %>
            </h2>
            <p>
                <%= teenager.video.p %>
            </p>
            <iframe src=<%=teenager.video.iframeURL %>
                width="100%" height="500" style="border:none;overflow:hidden" scrolling="no" frameborder="0"
                allowfullscreen="true" allow="autoplay; clipboard-write; encrypted-media; picture-in-picture; web-share"
                allowFullScreen="true"></iframe>
            <h2 class="pt-5 text-center">
                <%= teenager.leaders.heading %>
            </h2>
            <ul>
                <% teenager.leaders.leader.map((leader)=>{ %>
                    <li>
                        <p>
                            <strong>
                                <%= leader.name %>
                            </strong> : <%= leader.shortBio %>
                        </p>
                    </li>
                    <% }) %>
            </ul>
            <h2 class="pt-5 text-center">
                <%= teenager.joinUs.heading %>
            </h2>
            <p>
                <%= teenager.joinUs.p %>
            </p>
        </div>
        <h2 class="text-center display-6">Check Out our Gallary</h2>
