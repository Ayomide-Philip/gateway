        </div>
    </div>

    <!-- ========== End  section of video banner ========== -->

    <!-- ========== Start section of the welcome message ========== -->
    <div class="container-fluid  mb-5 d-flex justify-content-center bg-body-tertiary pt-5 pb-5">
        <div class="align-self-center text-center">
            <h2>
                <%= welcome.heading %>
            </h2>
            <% welcome.paragraph.map((paragraph)=>{ %>
                <p class="lead">
                    <%= paragraph %>
                </p>
                <% }) %>
                    <a class="btn btn-outline-primary" href=<%=welcome.button.url %> role="button">
                        <%= welcome.button.name%>
