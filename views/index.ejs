        </h2>
        <div class="container">
            <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4 justify-content-center">
                <%guidingPastors.map((pastor)=>{ %>
                    <div class="col d-flex justify-content-center">
                        <div class="card text-center" style="width: 25rem;">
                            <img src="./images/guiding-Pastors/<%= pastor.imageURL %>.jpg"
                                class="card-img-top custom-card-img" alt=<%=pastor.positionHeld %>
                            style="width: 100%; height: 350px; object-fit: cover; object-position: <%=
                                pastor.objectPosition %> ;">
                                <div class="card-footer">
                                    <small class="text-body-secondary ms-5"><strong>
                                            <%=pastor.positionHeld %>
                                        </strong></small>
                                </div>
                        </div>
                    </div>
                    <% }) %>

            </div>
        </div>
    </div>
    <!-- ========== End Section of the navigation section ========== -->
